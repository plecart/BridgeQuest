# Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de données
# SQLite (développement)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (production - décommenter et configurer)
# DB_NAME=bridgequest
# DB_USER=bridgequest_user
# DB_PASSWORD=your-database-password
# DB_HOST=localhost
# DB_PORT=5432

# CORS (pour le développement Flutter)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# SSO - Apple Sign-In
# Bundle ID de l'app iOS (ex: fr.bridgequest.app)
APPLE_CLIENT_ID=your-apple-bundle-id

# SSO - Google Sign-In
# Liste des Client IDs autorisés (Web, iOS, Android), séparés par des virgules
# Obtenez-les depuis Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_IDS=your-web-client-id.apps.googleusercontent.com,your-ios-client-id.apps.googleusercontent.com

# Redis (pour WebSocket - à configurer plus tard)
# REDIS_URL=redis://localhost:6379/0

# Static files (production)
# STATIC_ROOT=/path/to/staticfiles

# Security (production)
# SECURE_SSL_REDIRECT=True
